{
  "name": "aria",
  "private": true,
  "packageManager": "bun@1.1.27",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "generate:types": "./scripts/generate-types.sh",
    "dev:web": "turbo run dev --filter=@aria/web",
    "dev:mobile": "turbo run dev --filter=@aria/mobile",
    "dev:api": "turbo run dev --filter=@aria/api",
    "build:web": "turbo run build --filter=@aria/web",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.11.1",
    "husky": "^9.1.7",
    "turbo": "^2.6.1",
    "typescript": "^5.6.3"
  }
}
